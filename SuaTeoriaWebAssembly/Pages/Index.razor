@page "/"
@inject HttpClient http

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-7 col-sm-6">
            <div class="container">
                <h2 class="fontePadrao">AS MAIS RECENTES</h2>
                <div class="dropdown-divider"></div>
                <div class="row">
                    @if (Teorias != null)
                    {
                        @foreach (var item in Teorias)
                        {
                            <div class="col-lg-6 col-md-12 py-5">
                                <a href="visualizarteoria/@item.Id" title="">
                                    <img src="data:image/jpeg;base64, @item.ImagemTitulo" id="imagemInicio" />
                                    <p id="textoInicio">@item.Titulo</p>
                                </a>
                            </div>
                        }
                    }


                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>

                            <li class="page-item"><a class="page-link" href="#">1</a></li>

                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-5 col-sm-6">
            <div class="container">
                <h4 class="fontePadrao">TOP OBRAS</h4>
                @foreach (var o in ObrasMaisFaladas)
                {
                    <div class="dropdown-divider"></div>
                    <div class="row py-2">
                        <div class="col-4"><a href="#"><img id="menuLateralImg" src="data:image/jpeg;base64, @o.Obra.ImagemObra" /></a></div>
                        <div class="col-6"><a href="#">@o.Obra.Nome</a></div>
                    </div>
                }
                <h4 class="fontePadrao mt-5">TOP TEORIAS</h4>
                @foreach (var t in TopTeorias)
                {
                    <div class="dropdown-divider"></div>
                    <div class="row py-2">
                        <div class="col-4"><a href="#"><img id="menuLateralImg" src="data:image/jpeg;base64, @t.Teoria.ImagemTitulo" /></a></div>
                        <div class="col-6"><a href="#">@t.Teoria.Titulo</a></div>
                    </div>
                }

                <h4 class="fontePadrao mt-5">TOP TEORISTAS</h4>
                @foreach (var t in TopUsuarios)
                {
                    <div class="dropdown-divider"></div>
                    <div class="row">
                        <div class="col-4"><a href="#"><img id="menuLateralImg" src=images/kimetsu.png /></a></div>
                        <div class="col-6"><a href="#">KIMETSU NO YAIBA</a></div>
                    </div>
                }
            </div>
        </div>


    </div>

</div>


@code {
    Teoria teoria = new();
    List<Teoria> Teorias = new();
    List<TopObra> TopObras = new();
    List<Usuario> TopUsuarios = new();
    List<Favorite> Favorites = new();
    List<Obra> Obras = new();
    List<ObraMaisFalada> ObrasMaisFaladas = new();
    List<TopTeoria> TopTeorias = new();

    IEnumerable<object>? teste;

    #region Pagination
    [Parameter]
    public int PageIndex { get; set; }
    [Parameter]
    public int TotalPages { get; set; }
    [Parameter]
    public int Radius { get; set; }
    [Parameter]
    public EventCallback<int> OnSelectedPage { get; set; }

    #endregion


    #region Class GetTop
    public class TopObra
    {
        public int IdObra { get; set; }
        public int Quantidade { get; set; }
        public string NomeObra { get; set; }
        public int IdCategoria { get; set; }
        public string ImagemObra { get; set; }
    }

    public class ObraMaisFalada
    {
        public Obra Obra { get; set; }
        public int Quantidade { get; set; }
    }

    public class TopTeoria
    {
        public int IdTeoria { get; set; }
        public int Quantidade { get; set; }
        public Teoria Teoria { get; set; }
    }

    public class TopUsuario
    {
        public int MyProperty { get; set; }
    }
    #endregion

    protected override async Task OnInitializedAsync()
    {
        await GetTeorias();
        await GetObras();
        await GetFavorites();
        await GetObrasMaisFaladas();
        await GetTopTeorias();
        await GetTopUsuarios();
    }

    async Task GetTeorias()
    {
        Teorias = await http.GetFromJsonAsync<List<Teoria>>("http://localhost:5285/teorias");
    }

    async Task GetObras()
    {
        Obras = await http.GetFromJsonAsync<List<Obra>>("http://localhost:5285/obras");
    }

    async Task GetFavorites()
    {
        Favorites = await http.GetFromJsonAsync<List<Favorite>>("http://localhost:5285/curtidas");
    }

    async Task GetTopObras()
    {
        TopObras = await http.GetFromJsonAsync<List<TopObra>>("http://localhost:5285/topobras");
    }

    async Task GetObrasMaisFaladas()
    {
        ObrasMaisFaladas = await http.GetFromJsonAsync<List<ObraMaisFalada>>("http://localhost:5285/obrasmaisfaladas");
    }

    async Task GetTopTeorias()
    {
        TopTeorias = await http.GetFromJsonAsync<List<TopTeoria>>("http://localhost:5285/topteorias");
    }

    async Task GetTopUsuarios()
    {
        //TopUsuarios = await http.GetFromJsonAsync<List<Usuario>>("http://localhost:5285/obrasmaisfaladas");
    }

}
